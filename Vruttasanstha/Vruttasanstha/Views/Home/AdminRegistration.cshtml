@model Vruttasanstha.Models.Adminreg

@{
    ViewBag.Title = "AdminRegistration";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="border: 1px solid #000; padding: 10px;">
    @using (Html.BeginForm("AdminRegistration", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:center;">
        <h3 class="stdHeading">REGISTRATION FORM </h3>
    </div>
        
        if (ViewBag.message != null)
        {
            <div>
                <label class="col-lg-12 alert-success" style="text-align:center;">@ViewBag.message </label>
            </div>
        }
        <div class="form-horizontal">
            <div class="form-group">
                <label for="rg-from" class="col-lg-2  control-label">First Name : </label>
                <div class="col-lg-8">
                    @Html.TextBoxFor(m => m.Afname, new { id = "rg-from", @class = "form-control ", style = "width:100%;" })
                    @Html.ValidationMessageFor(m => m.Afname, null, new { style = "color:red;font-size: 16px;" })
                </div>
            </div>
            <div class="form-group">
                <label for="rg-from" class="col-lg-2  control-label">Last Name : </label>
                <div class="col-lg-8">
                    @Html.TextBoxFor(m => m.Alname, new { id = "rg-from", @class = "form-control ", style = "width:100%;" })
                    @Html.ValidationMessageFor(m => m.Alname, null, new { style = "color:red;font-size: 16px;" })
                </div>
            </div>
                <div class="form-group">
                    <label for="rg-from" class="col-lg-2  control-label">contact No : </label>
                    <div class="col-lg-8">
                        @Html.TextBoxFor(m => m.Acontactno, new { id = "rg-from", @class = "form-control ", style = "width:100%;" })
                        @Html.ValidationMessageFor(m => m.Acontactno, null, new { style = "color:red;font-size: 16px;" })
                    </div>
                </div>
            
            <div class="form-group">
                <label for="rg-from" class="col-lg-2  control-label">Email : </label>
                <div class="col-lg-8">
                    @Html.TextBoxFor(m => m.Aemail, new { id = "rg-from", @class = "form-control ", style = "width:100%;" })
                    @Html.ValidationMessageFor(m => m.Aemail, null, new { style = "color:red;font-size: 16px;" })
                </div>
            </div>
            <div class="form-group">
                <label for="rg-from" class="col-lg-2  control-label">User Name: </label>
                <div class="col-lg-8">
                    @Html.TextBoxFor(m => m.Ausername, new { id = "rg-from", @class = "form-control ", style = "width:100%;" })
                    @Html.ValidationMessageFor(m => m.Ausername, null, new { style = "color:red;font-size: 16px;" })
                </div>
            </div>
            <div class="form-group">
                <label for="rg-from" class="col-lg-2  control-label">Image : </label>
                <div class="col-lg-8">
                    @Html.TextBoxFor(m => m.Aimage, new { type = "file", id = "imgInp", @class = "file_upload" })
                    @Html.ValidationMessageFor(m => m.Aimage, null, new { style = "color:red;font-size: 16px;" })
                </div>
            </div>
            <div class="form-group">
                <label for="rg-from" class="col-lg-2  control-label">Password: </label>
                <div class="col-lg-8">
                    @Html.TextBoxFor(m => m.Apass, new { id = "rg-from", type = "password", @class = "form-control ", style = "width:100%;" })
                    @Html.ValidationMessageFor(m => m.Apass, null, new { style = "color:red;font-size: 16px;" })
                </div>
            </div>
            <div class="form-group">
                <label for="rg-from" class="col-lg-2  control-label">Confirm Password: </label>
                <div class="col-lg-8">
                    @Html.TextBoxFor(m => m.Acpass, new { id = "rg-from", type = "password", @class = "form-control ", style = "width:100%;" })
                    @Html.ValidationMessageFor(m => m.Acpass, null, new { style = "color:red;font-size: 16px;" })
                </div>
            </div>
        </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 center-block" style="text-align: center;padding:10px;">
        <input type="submit" name="btnsubmit" value="Register" class="btn btn-success" />
        </div>

    }
</div>
