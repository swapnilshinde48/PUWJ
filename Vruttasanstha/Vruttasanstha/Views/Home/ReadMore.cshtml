@model Vruttasanstha.Models.Home

@{
    ViewBag.Title = "Detailed News";
    Layout = "~/Views/Shared/Home_Layout.cshtml";
}


<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-top:1%;">
    <h4 class="col-lg-12 col-md-12 col-sm-12 col-xs-12 module-heading">
        More Top
        <span class="title-last">News</span>
    </h4>
    @if (Model != null)
    {
        for (int i = 0; i < Model.home.Count; i++)
        {
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="border-bottom: 1px solid #ff8000; padding-bottom: 1%; margin-bottom: 1%;">
                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 ">
                    <img id="imgupload" src="@Model.home[i].NewsImage" class="img-responsive img-thumbnail" />
                </div>
                <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                    <h4 itemprop="headline" style="margin-top: 0px; color: #1C4B98; ">
                        @Model.home[i].NewsHeading
                    </h4>
                    <p style="text-align:justify;"> @Model.home[i].Description &nbsp; </p>
                    <span class="createdDate" itemprop="dateCreated" style="font-family:sans-serif;">@Model.home[i].Createddate </span>
                </div>
            </div>
        }
    }
</div>




